<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vinh Truong dep trai </title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <h1> ROBOTINO </h1>

    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div>

        <div class="w3-container">
            <h2>List user</h2>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    <% for(let i=0; i < dataUser.length; i++) { %>
                        <tr>

                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstname %>
                            </td>
                            <td>
                                <%= dataUser[i].lastname %>
                            </td>
                            <td>
                                <a href="/details/user/<%= dataUser[i].id %>" target="_blank">
                                    Detail
                                </a>

                                <button type="button">
                                    Edit
                                </button>
                                <button type="button">
                                    Delete
                                </button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>


            </table>
        </div>
        <div class="create-user-container">
            <form action="/create-new-user" method="POST">
                <div>
                    Create a new user:
                </div>
                <div>
                    <label>
                        firstname:
                    </label>
                    <!-- thuộc tính name là để server quan hệ với view (hiển thị ngoài localhost) -->
                    <input type="text" name="firstnameNew" />

                    <label>
                        lastname:
                    </label>
                    <input type="text" name="lastnameNew" />
                    <label>
                        Email:
                    </label>
                    <input type="email" name="emailNew" />
                    <label>
                        address:
                    </label>
                    <input type="text" name="addressNew" />
                </div>
                <div>
                    <button type="submit" class="button-submit">
                        <!-- gui 1 request -->
                        Submit
                    </button>
                </div>
            </form>
        </div>
        <p> End Page </p>
    </div>
    <!-- <img src="/image/anh dai dien.jpg" /> -->
</body>

</html>